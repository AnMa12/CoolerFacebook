
@{
  ViewBag.Title = "Show";
}

<h2 class="theme-color title-style">Profilul lui X</h2>
<hr />

@if (ViewBag.Profile == null)
{
  <div class="center-icon no-profile-card">
    <h3> Oops! </h3>
    <i class='far fa-sad-tear icon-style'></i>
    <h3 style="margin-top: 16px;">
      Nu exista acest profil!
    </h3>
  </div>
}
else
{
  <div class="row">
    <div class="col-md-3" style="border: 1px gray dotted; background-color:lightgray; border-radius:15px; height:300px">

    </div>
    <div class="col-md-6">
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <div class="list-group-item">
            Prenume
          </div>
        </div>
        <div class="col-sm-6">
          <div class="list-group-item">
            @ViewBag.Profile.FirstName
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <div class="list-group-item">
            Nume
          </div>
        </div>
        <div class="col-sm-6">
          <div class="list-group-item">
            @ViewBag.Profile.LastName
          </div>
        </div>
      </div>
      <div class="row margin-bottom">
        <div class="col-sm-4">
          <div class="list-group-item">
            Descriere
          </div>
        </div>
        <div class="col-sm-6">
          <div class="list-group-item">
            @ViewBag.Profile.Description
          </div>
        </div>
      </div>
    </div>
  </div>
  <h1>@ViewBag.message</h1>
  <h2 class="theme-color title-style">Albume</h2>
  <hr />
  if (ViewBag.Albums != null)
  {
    foreach (CoolerFacebook.Models.Album album in ViewBag.Albums)
    {
      @Html.Partial("AlbumListShowPartial", album);
      <hr />
    }
  }
  else
  {
    <div class="center-icon no-profile-card">
      <h4>
        Momentan utilizatorul nu are albume
      </h4>
    </div>
  }
}

