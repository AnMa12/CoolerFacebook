
@{
    /**/

    /**/

    ViewBag.Title = "Profile";
}
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
</head>

<h2 class="theme-color title-style">Profilul meu</h2>
<hr />

@if (ViewBag.Profile == null)
{
    <div class="center-icon no-profile-card">
        <h3> Oops! </h3>
        <i class='far fa-sad-tear icon-style'></i>
        <h3 style="margin-top: 16px;">
            Pare ca esti nou aici! Inca nu ai un profil.
        </h3>
        <h3>
            Asta e sansa perfecta sa iti creezi unul, apasand pe butonul de mai jos!
        </h3>
        <a href="/Profile/New">
            <button type="button"
                    class="btn btn-primary">
                Creeaza profilul
            </button>
        </a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3" style="border: 1px gray dotted; background-color:lightgray; border-radius:15px; height:300px">

        </div>
        <div class="col-md-6">
            <div class="row margin-bottom">
                <div class="col-sm-4">
                    <div class="list-group-item">
                        Prenume
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="list-group-item">
                        @ViewBag.Profile.FirstName
                    </div>
                </div>
            </div>
            <div class="row margin-bottom">
                <div class="col-sm-4">
                    <div class="list-group-item">
                        Nume
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="list-group-item">
                        @ViewBag.Profile.LastName
                    </div>
                </div>
            </div>
            <div class="row margin-bottom">
                <div class="col-sm-4">
                    <div class="list-group-item">
                        Descriere
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="list-group-item">
                        @ViewBag.Profile.Description
                    </div>
                </div>
            </div>
            <a href="/Profile/Edit/@ViewBag.Profile.ProfileId">
                <button type="button"
                        class="btn btn-primary margin-bottom">
                    Editeaza profilul
                </button>
            </a>
        </div>
    </div>
    <h1>@ViewBag.message</h1>
    <h2 class="theme-color title-style">Albumele mele</h2>
    <hr />
    if (ViewBag.Albums != null)
    {
        <hr />
        <a href="/Album/New">
            <button type="button"
                    class="btn btn-primary">
                Adauga album nou
            </button>
        </a>
        <br />
        <hr />
        foreach (CoolerFacebook.Models.Album album in ViewBag.Albums)
        {
            @Html.Partial("AlbumListPartial", album);
            <hr />
        }
    }
    else
    {
        <div class="center-icon no-profile-card">
            <h4>
                Momentan nu ai nici un album
            </h4>
            <i class='fa fa-book icon-style'></i>
            <h4>Impartaseste momentele frumoase cu prietenii tai, adaugand primul tau album!</h4>
            <a href="/Album/New">
                <button type="button"
                        class="btn btn-primary">
                    Adauga album nou
                </button>
            </a>
        </div>
    }
}
